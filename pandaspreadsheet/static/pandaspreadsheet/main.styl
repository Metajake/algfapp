*
  box-sizing:border-box

body
  padding: 10px 20px

#masthead
  margin-bottom:20px

#calendar
  .week
    display:flex
    flex-direction:row
    margin:15px 0
  .day
    text-align:center
    flex: 1 1 0 // flex-grow flex-shrink flex-basis
    h4
      margin-bottom:10px
  .cell
    text-align:center
    display:flex
    flex-direction: row
    .column
      border-bottom:1px solid #ccc
      border-right:1px solid #ccc
      width: 50%
      &.note
        width:100%
        color:red
        font-weight:bold
        & + .column
          width:0

    p
      white-space:nowrap

#product-list
  width:25%
  .note
    display:none

#todays-products
  width:100%
  // grid-template-columns: 50% 50%
    // padding:5px 0
  .item:nth-child(odd)
    grid-column-start: 1
    grid-column-end: 2
  .item:nth-child(even)
    grid-column-start: 2
    grid-column-end: 3
  .item.note
    grid-column-start:1
    grid-column-end:3
    & + .item
      display:none
