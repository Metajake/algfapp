| {% load static %}

doctype html
html
  include includes/head.pug
  body
    #masthead
      h3.align-center {{ scheduleDay.date }}
      a(href="{% url 'schedule'%}") &lt; Weekly Schedule
      a.pull-right(href="{% url 'list'%}"): h3 Kettles &gt; 
      
    #product-table.headline-list.grid-container
      | {% for product in scheduleDay.products %}
      .item.product-number.align-center
        h3 {{product.0|safe}}
      .item.product-name.align-center
        h3 {{product.1|safe}}
      | {% endfor %}
