*
  box-sizing: border-box
html
  font-family: sans-serif
h4
  font-weight:bold
.align-center
  text-align:center
.inline
  display:inline

.week
  height:80%
  display:flex
  flex-direction:row
  .day
    border:1px solid #ccc
    flex:1 1 0 //flex-grow flex-shrink flex-basis
    h4
      border-top:2px solid black
      border-bottom:2px solid black
    .sortable
      height:100%
    .cell
      position:relative
      display:flex
      flex-wrap:wrap
      border-bottom:1px solid #444
      & > div
        text-align:center
      &:hover
        border:1px solid rgba(0,0,255,0.5)
        > [class ^= 'ui-']
          opacity:1
      & .column:first-child
        border-right:1px solid #999
      .column
        padding:5px 0
        width:50%
        p
          height:100%
      .note
        padding:5px 0
        border-top:1px solid #999
        color:red
        flex-grow:1
        flex-basis:100%
      & > [class^= 'ui-']
        cursor: pointer
        background-color:white
        position:absolute
        opacity:0.2
        transition: opacity .2s ease-in-out
        svg
          width:.5em
      .ui-delete
        right:0
        top:0
      .ui-duplicate
        right:-1px
        bottom:0
      .ui-add-note
        bottom:0
        left:50%
      .update-form
        display:none
        input[type='text']
          width:95%
        label
          display:none
