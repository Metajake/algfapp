*
  box-sizing: border-box
html
  font-family: sans-serif
h4
  font-weight:bold
.align-center
  text-align:center

.week
  height:80%
  display:flex
  flex-direction:row
  .day
    border:1px solid #ccc
    flex-grow:1
    .cell
      margin:3px
      display:flex
      .column
        flex-grow:1
    h4
      border-top:2px solid black
      border-bottom:2px solid black
