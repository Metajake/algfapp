*
  box-sizing: border-box;

body
  background-color:#ddd

h6
  font-size:.95rem

#controls
  padding:10px 10px 10px
  background-color:white
  button
    padding:10px
    width:75px
    font-size:1rem
    font-weight:bold
    border-color:#666

.week-container
  margin-bottom:10px

.week-header
  padding:0 5px

.day-container
  border:1px solid black
  margin:5px
  background-color:white

.day-header
  justify-content:space-around

.ht_master
  td
    font-size:.85rem
  tr td:nth-child(5)
    color:red
  & tbody tr td:nth-child(6)
    text-align:center

.ht_clone_top th
  background: #e9e9e9
  font-size:.8rem

.ht_clone_left th
  background: #e9e9e9
  font-size:.7rem
  color:#666

