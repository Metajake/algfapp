*
  box-sizing: border-box;

@page
  size: letter portrait

body, html
  margin:0
  padding:0
  font-family:helvetica, "sans-serif"
  font-weight:bold

body
  font-size:.1rem

h6
  font-size:9pt
  margin:0

#controls
  display:none

.week-container
  padding:0 5px
  .week-header
    margin:4px 0
  .week-content-container
    display:flex
    .day-container
      margin:10px 10px 10px 0
      border-right:1px solid #333
      border-bottom:1px solid #333
      border-left:1px solid #333
    .day-container:last-child
      margin-right:0

.day-header
  color: red
  text-align:center
  display:flex
  justify-content:space-around
  border-bottom:1px solid #999
  padding-bottom:4px
  margin-bottom:4px
  h6
    font-size:10pt

.handsontable th
  display:none !important

.ht_master
  table.htCore
    width:100%
    table-layout:fixed
    colgroup
      display:none
    thead
      display:none
    & tbody tr td:nth-child(2)
      text-align:center
    tr
      height:1.5em
    td
      border-right:.5px solid #aaa
      border-bottom:.5px solid #aaa
      font-size:8pt
      white-space:nowrap
      overflow:hidden
    td:nth-child(2)
      width:28% !important
    td:nth-child(6)
      border-right:none
      width:7% !important
    tr:last-child
      td
        border-bottom:none
.wtHider
  height:auto !important
