*
  box-sizing: border-box
html
  font-family: sans-serif
em
  font-style:italic
h2,h3,h4, strong
  font-weight: bold
h2
  font-size:2.8rem
h3
  font-size:1.8rem

.align-center
  text-align:center
.align-right
  text-align:right
.inline
  display:inline
.pull-right
  float:right
.pull-left
  float:left
.pull-center
  margin:0 auto

div[class*="grid-"]
  display:grid
  &[class*='-50-50']
    grid-template-columns: 50% 50%
    padding:5px 0
div[class*="flex-"]
  display:flex
  &[class$="-row"]
    flex-direction: row
  & > div
    flex: 1 1 0

.headline-list
  .item
    padding: 3px 0
    border-bottom:1px solid #ccc
  h2,h3
    margin:5px 0
