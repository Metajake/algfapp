| {% load static %}
doctype html
html
  head
    title Today
    link(rel="stylesheet" href="{% static 'kettles/assignment.css' %}" type="text/css" media="screen,projection")
  body
    h1 {{todays_date}}
    p#todays-production-day(style="display:none;") {{todays_production_day}}
    .product-list
      | {% for product in todays_production_day.days_products.all %}
      h5.product(class="{%for tag in product.tags %}{{tag}} {%endfor%}") {{product.item_number}}
      | {% endfor %}
    .kettle-list
        | {% for kettle in todays_production_day.kettles.all %}
        .kettle(id="{{kettle.kettle_number}}")
          p.kettle-number {{kettle.kettle_number}}
          .kettle-product-list
            include update_kettle.pug
        | {% endfor %}
        
    include includes/footer.pug
    script(type="text/javascript" src="{% static 'kettles/edit.js'%}")
      
