| {% extends 'kettles/base.html' %}

| {% load static %}
| {% load custom_tags %}

| {% block extraStyle%}
link(rel="stylesheet" href="{% static 'kettles/assign_day.css' %}" type="text/css" media="screen, projection")
| {% endblock %}

| {% block content %}
#wrapper
  #container
    header
      p#todays-production-day(style="display:none;") {{production_day}}
    aside
      #days-product-list.sortable-products-list
        | {% for product in production_day.days_products.all|sort_by:'kettle_order' %}
        | {% if product.assigned == False %}
        .product-item(id='{{product.schedule_number}}')(class="{% if product.note != '' %}note{% endif%} {% if product.gluten_free %}gluten-free{% endif%}")
          p.product-schedule-number {{product.schedule_number}} <span id="{{product.multiple}}" class="multiple">{% if product.multiple > 0%}({{product.multiple}}){% endif %}</span>
          | {% if product.product_name == '' %}
          p.product-name Product Name
          | {% else %}
          p.product-name {{ product.product_name }}
          | {% endif %}
          | {% if product.note != '' %}
          p.note {{product.note}}
          | {% endif %}
        | {% endif %}
        | {% endfor %}
    
    | {% for kettle in production_day.kettles.all %}
    div(id='{{kettle.kettle_number}}').kettle-container
      .kettle-container-header
        h4.text-center {{kettle}}
      .kettle-container-content
        div(id="sortable_{{kettle}}").sortable-products-list
          | {% for product in kettle.days_products.all|sort_by:'kettle_order' %}
          .product-item(id='{{product.schedule_number}}')(class="{% if product.note != '' %}note{% endif%} {% if product.gluten_free %}gluten-free{% endif%}")
            p.product-schedule-number {{product.schedule_number}} <span id="{{product.multiple}}" class="multiple">{% if product.multiple > 0%}({{product.multiple}}){% endif %}</span>
            | {% if product.product_name == '' %}
            p.product-name Product Name
            | {% else %}
            p.product-name {{ product.product_name }}
            | {% endif %}
            | {% if product.note != '' %}
            p.note {{product.note}}
            | {% endif %}
          | {% endfor %}
    | {% endfor %}
      
| {% endblock %}

| {% block extraScripts %}
script(type="text/javascript" src="{% static 'kettles/assign_day.js'%}")
| {% endblock %}
