*
  box-sizing:border-box

html, body
  height:100%
  width:100%

body
  font-family:sans-serif
h1, h2, h3, h4, h5, h6
  font-weight: bold
h1
  font-size:2.5rem
  margin:4px 0
h2
  font-size:2rem
  margin:4px 0
h3
  font-size:1.8rem
  margin:5px 0
h4
  font-size:1.5rem
  margin:5px 0
h5
  font-size:1.3rem
  margin:5px 0
h6
  font-size:1.1rem
  margin:5px 0

.button
  border: 1px solid #ccc
  border-radius:4px
  cursor:pointer

.text-center
  text-align:center
.is-float-right
  float:right
.is-inline
  display: inline
.is-relative
  position:relative
.is-marginless
  margin:0px

.is-success
  background-color:#cfc
