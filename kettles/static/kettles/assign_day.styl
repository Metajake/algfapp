#wrapper
  width:100%
  height:100%
  background-color:#eee

#container
  display: grid
  height:100%
  width:100%
  grid-template-columns: 1fr 1fr 1fr 1fr
  grid-template-rows: minmax(auto, 50px) auto auto auto
  header
    grid-column: 1/5
    grid-row: 1/2
    background-color: #ddd
    min-height:20px
  aside
    grid-column: 1/2
    grid-row: 2/5
    background-color: #ccc
    padding:20px 0 20px 50px
    overflow-x: hidden
    overflow-y: scroll
  .kettle-container
    padding: 5px 0 8px 0
    display:flex
    flex-direction: column
    .kettle-container-header
      flex-grow:1
    .kettle-container-content
      flex-grow:20
      outline: 3px dashed #88e
      display:flex
      flex-direction:column

#days-product-list
  height: 100%
  outline: 3px dashed #e88
div[id^="sortable_"]
  flex-grow:1

.product-item
  outline: 1px solid gray
  padding:5px
  &.note
    color: red
  &.gluten-free
    color:blue
  .note
    color:red
    font-weight: bold

.product-sort-placeholder
  height:25px
  background-color: #cceebb
