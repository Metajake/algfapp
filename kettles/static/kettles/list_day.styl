base-font-size = calc(1rem + .8vw)

#wrapper
  width:100%
  height:100%

header
  min-height:20px

aside
 width:20%
 float:left
 height:100%
 border-right:2px solid #666
 .production-day-list
  height:100%
  width:100%
  display:flex
  flex-direction:column
  background-color:#ee5
  .production-day-item
    text-align:center
    padding:10px 0
    border-bottom:2px solid darkgreen
    p
      font-size: calc(1rem + 1.4vw)
      font-weight: bold
      &.note
        color: red

#production-list
  display: grid
  // height:100%
  height:100vh
  float:right
  width:80%
  grid-template-columns: 1fr 1fr 1fr
  grid-template-rows: repeat(3, minmax(1fr, auto))
  // grid-template-rows: 33vmin 33vmin 33vmin
  min-width: 0
  padding-left:20px

.kettle-container
  padding-bottom:20px
  text-align: center
  .kettle-header
    display: inline-block
    border-bottom:3px solid darkgreen
    padding:0 15px
  &.is-detail
    .detail
      display:block

.kettle-container:not(.is-detail)
  .detail
    display:none
  .product-item
    p
      font-size: calc(1rem + 1.4vw)
    .product-schedule-number
      float:none

.kettle-container
  .product-item
    &.is-complete
      p
        font-size: calc(1rem + .8vw)


.product-list
  // outline: 3px dashed #88e
  border-right: 2px solid blue
  height:92%
  padding: 5px 5px
  display:flex
  flex-direction: column

.product-list:nth-child(4)
  background-color:red

.product-item
  background-color:white
  // outline: 1px solid gray
  border-bottom:2px solid darkgreen
  padding:3px 0 5px 0
  margin:3px 0
  p
    // font-size:.5rem
    font-size:calc(1rem + .2vw)
    // font-size:calc(1rem + 1.3vh)
  &.note
    color: red
  &.gluten-free
    color:blue
  &.is-complete
    p
      text-decoration: line-through
      opacity: 0.35
  .product-schedule-number
    float:left
    font-weight:bold
  .note
    float:right
    font-weight: bold
  .product-name
    clear:both
    text-align:left

@media(max-width:376px)
  aside
    float:none
    width:100%
    height:auto
    .production-day-list
      flex-direction:row
      flex-wrap:wrap
      height:auto
      .production-day-item
        flex: 50%
