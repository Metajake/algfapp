#wrapper
  width:100%
  height:100%

header
  min-height:20px

#production-list
  display: grid
  // height:100%
  height:100vh
  width:100%
  grid-template-columns: 1fr 1fr 1fr
  grid-template-rows: repeat(3, minmax(1fr, auto))
  // grid-template-rows: 33vmin 33vmin 33vmin
  min-width: 0

.kettle-container
  padding-bottom:20px
  text-align: center
  h4
    display: inline-block
    border-bottom:2px solid darkgreen

.product-list
  // outline: 3px dashed #88e
  border-left: 1px solid blue
  border-right: 1px solid blue
  height:92%
  padding: 5px 5px
  display:flex
  flex-direction: column

.product-item
  background-color:white
  // outline: 1px solid gray
  border-bottom:3px solid darkgreen
  padding:3px 0 5px 0
  margin:3px 0
  font-weight:bold
  flex:1
  p
    font-size:.5rem
    font-size:3vh
    // font-size:calc(1rem + 1.3vh)
  &.note
    color: red
  &.gluten-free
    color:blue
  &.is-complete
    p
      text-decoration: line-through
      opacity: 0.4
  .product-schedule-number
    float:left
  .note
    float:right
    font-weight: bold
  .product-name
    clear:both
    text-align:left
