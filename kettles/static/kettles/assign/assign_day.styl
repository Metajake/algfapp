#wrapper
  width:100%
  height:100%

#container
  display: grid
  height:100%
  width:100%
  grid-template-columns: 1fr 1fr 1fr 1fr
  grid-template-rows: minmax(auto, 50px) 1fr 1fr 1fr
  min-width: 0
  header
    grid-column: 1/5
    grid-row: 1/2
    min-height:20px
  aside
    grid-column: 1/2
    grid-row: 2/5
    padding:20px 10px 20px 30px
    overflow-x: hidden
    overflow-y: scroll
  .kettle-container
    padding: 5px 0 8px 0
    flex-direction: column
    .kettle-container-header
      justify-content:space-between
      padding:0 10px
    .kettle-container-content
      flex:20
      outline: 3px dashed #88e
      flex-direction:column

#days-product-list
  height: 100%
  outline: 3px dashed #e88
div[id^="sortable_"]
  flex-grow:1
  min-height:30px

.product-item
  background-color: #eee
  outline: 1px solid gray
  .multiple
    font-weight:bold
    font-size: 1.1rem
    line-height: 1rem
  &.note
    color: red
  &.gluten-free
    color:blue
  .note
    color:red
    font-weight: bold

  .product-sort-handle
    flex:4
    display:flex
    flex-direction: column
    &.is-complete
      opacity:0.5
      p
        text-decoration: line-through
    .schedule-number-container
      flex:1 1 auto
      p
        margin-bottom:3px
    .product-name-container
      flex-basis: 100%
      overflow:hidden
      p
        font-size:.9rem
        white-space: nowrap
        overflow:hidden
        text-overflow: ellipsis
        max-width: 100%
        margin-bottom:3px
    .note-container
      flex:1 1 auto
      p
        font-size:.9rem
  .product-complete-container
    overflow:hidden
    flex:.7
  .product-start-time
    padding:3px 10px
    font-weight:bold
    margin:0 0 5px
    background-color:lightgreen
    justify-content:space-between
    align-items:center
    button.remove-product-start-time
      font-weight:bold
      font-size:.8rem
      background-color:#9f9
      border:1px solid #070
  .product-ui-container
    padding:5px

#days-product-list
  .product-sort-handle
    flex:1
  .product-complete-container
    flex:0

.product-sort-placeholder
  height:25px
  background-color: #cceebb

.product-add-start-time
  flex:.7
  color:green
  font-size:.8rem
  line-height:.8rem
  font-weight:bold
  height:33px

#dialogue-add-start-time-form
  text-align:center
  background-color:#ccc

.start-time-dialog
  border:2px solid #666
  border-radius:4px
  .ui-dialog-titlebar
    padding:6px
    background-color:#eee
  .ui-dialog-content
    padding:6px
  .ui-dialog-buttonpane
    padding:6px
    background-color:#eee
    text-align:center
  .ui-dialog-titlebar-close
    float:right
  button
    font-size:1rem
  form
    input
      font-size:1rem
