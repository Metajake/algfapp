#wrapper
  width:100%
  height:100%
  // background-color:#eee

#container
  display: grid
  height:100%
  width:100%
  grid-template-columns: 1fr 1fr 1fr 1fr
  grid-template-rows: minmax(auto, 50px) 1fr 1fr 1fr
  min-width: 0
  header
    grid-column: 1/5
    grid-row: 1/2
    min-height:20px
  aside
    grid-column: 1/2
    grid-row: 2/5
    // background-color: #ccc
    padding:20px 10px 20px 30px
    overflow-x: hidden
    overflow-y: scroll
  .kettle-container
    padding: 5px 0 8px 0
    display:flex
    flex-direction: column
    .kettle-container-header
      flex:1
    .kettle-container-content
      flex:20
      outline: 3px dashed #88e
      display:flex
      flex-direction:column

#days-product-list
  height: 100%
  outline: 3px dashed #e88
div[id^="sortable_"]
  flex-grow:1
  min-height:30px

.product-item
  background-color: #eee
  outline: 1px solid gray
  padding:5px
  display:flex
  .multiple
    font-weight:bold
    font-size: 1.1rem
    line-height: 1rem
  &.note
    color: red
  &.gluten-free
    color:blue
  .note
    color:red
    font-weight: bold

  .product-sort-handle
    flex:4
    display:flex
    flex-direction: column
    &.is-complete
      opacity:0.5
      p
        text-decoration: line-through
    .schedule-number-container
      flex:1 1 auto
      p
        margin-bottom:3px
    .product-name-container
      flex-basis: 100%
      overflow:hidden
      p
        font-size:.9rem
        white-space: nowrap
        overflow:hidden
        text-overflow: ellipsis
        max-width: 100%
        margin-bottom:3px
    .note-container
      flex:1 1 auto
      p
        font-size:.9rem
  .product-complete-container
    overflow:hidden
    flex:1
#days-product-list
  .product-sort-handle
    flex:1
  .product-complete-container
    flex:0

.product-sort-placeholder
  height:25px
  background-color: #cceebb
